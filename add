#!/bin/bash
if [ $1 = "master"]
then
	git add $2
	if [[ -z $3 ]]
	then
		git commit -m \"$2" : ajout du fichier "$2\"
	else
		git commit -m \"$2" : "$3\"
	fi
	git push origin master
else
	git add $1
	if [[ -z $2 ]]
	then
		git commit -m \"$1" : ajout du fichier "$1\"
	else
		git commit -m \"$1" : "$2\"
	fi
	git push
fi
